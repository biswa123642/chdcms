@model CGP.Feature.Search.Models.GlobalSearchResult
@using CGP.Foundation.SitecoreExtensions.Utilities

<style>
    div.gallery {
        border: 1px solid #ccc;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: auto;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }

    * {
        box-sizing: border-box;
    }

    .responsive {
        padding: 0 6px;
        float: left;
        width: 24.99999%;
    }
</style>
@{ if (Model == null)
    {

        <div class="search-result-page-wrapper">
            <section class="result-filter-section">
                <div class="container">
                    <div class="row">
                        <div class="search-keyword-section col-md-9">
                            <h2 class="search-keyword-title">
                                <span>
                                    @SitecoreUtil.DefaultDictionaryValue("GlobalSearch_ClickOnSearchIconToStartASearch")
                                </span>
                            </h2>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    }
    else
    {
        <div>
            <h2>Search Results</h2>

            <h4>Search for '@Model.SearchTerm' returned @Model.TotalResultCount results</h4>
            @if (Model.Products.GroupItems != null)
            {
                <div class="responsive">
                    <h2 style="z-index: 1;">Products</h2>
                    @foreach (var item in Model.Products.GroupItems)
                    {
                        <div class="gallery">
                            <a target="_blank" href="@item.ResultItem.ContentUrl">
                                <img src="@item.ResultItem.ProductImage" alt="">
                            </a>
                            <div class="desc">@item.ResultItem.Title</div>
                        </div>
                    }
                    <div class="load-more-content">
                        <a href="#" class="btn btn-default" id="show-more-button-content">Load More</a>
                    </div>
                </div>
            }
            @if (Model.Articles.GroupItems != null)
            {
                <div class="responsive">
                    <h2 style="z-index: 1;">Articles</h2>
                    @foreach (var item in Model.Articles.GroupItems)
                    {
                        <div class="gallery">
                            <a target="_blank" href="@item.ResultItem.ContentUrl">
                                <img src="@item.ResultItem.ContentDesktopImage" alt="">
                            </a>
                            <div class="desc">@item.ResultItem.Title</div>
                        </div>
                    }
                    <div class="load-more-content">
                        <a href="#" class="btn btn-default" id="show-more-button-content">Load More</a>
                    </div>
                </div>
            }
            @if (Model.Others.GroupItems != null)
            {
                <div class="responsive">
                    <h2 style="z-index: 1;">Others</h2>
                    @foreach (var item in Model.Others.GroupItems)
                    {
                        <div class="gallery">
                            <a target="_blank" href="@item.ResultItem.ContentUrl">
                                <img src="@item.ResultItem.ContentDesktopImage" alt="">
                            </a>
                            <div class="desc">@item.ResultItem.Title</div>
                        </div>
                    }
                    <div class="load-more-content">
                        <a href="#" class="btn btn-default" id="show-more-button-content">Load More</a>
                    </div>
                </div>
            }
        </div>
    }

}
